{
  "include": [
    "*.ts",
    "./server/*.ts"
  ],
  "filesGlob": [
    "**/*.ts{,x}",
    "node_modules/@types/*/index.d.ts",
    "node_modules/*/index.d.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  },
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "isolatedModules": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016",
      "es2017"
    ]
  }
}
